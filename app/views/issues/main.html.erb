<% if !signed_in? %>
	<div class = 'header'>
		<div class = 'global-rank-container'></div>
		<div class = 'logo_container'>
			<img src = 'assets/logos/white.png' height = "100%" />
		</div>
	</div>
	
	<div class = "signin_container">
		<div class = "signin_text">
			We NEVER post for you...we hate spam!
		</div>
		<div class = "signin_facebook_button">
			<%= link_to("Facebook Login", "/auth/facebook", "type" => "button", "class" => "", "style" => "width: 50%") %>
		</div>
		<input type="text" class="dial" data-width="30"
	    data-fgColor="#880000"
	    data-skin="tron"
	    data-thickness=".40"
		data-readOnly = true
		data-displayInput = false />

		<script>
		var val = 0;
		$(function() {
		    $(".dial").knob();
		});
		
		setInterval(function() {
			if (val > 100) {
				val = 0;
			}
			$('.dial')
			    .val(val)
			    .trigger('change');
			val = val + 1;
		}, 50);
		</script>
	</div>
<% else %>
	<div class = "loading_container inactive" id = "loading"></div>
	<div class = 'header'>
		<div class = 'global-rank-container'></div>
		<div class = 'logo_container'>
			<img src = 'assets/logos/white.png' height = "100%" />
		</div>
		<div class = "profile_container">
			<div class = "profile_pic_container">
				<img src="https://graph.facebook.com/517826414/picture"/ height="100%">
			</div>
			<div class = "profile_name_container">
				Nassim A.
			</div>
			<div class = "global_rank_container">
				<div class = "global_rank_small_icon">
					&#9733;
				</div>
				<div class = "global_rank_big_icon">
					&#9733;
				</div>
				<div class = "global_rank_big_icon">
					&#9733;
				</div>
				<div class = "global_rank_big_icon">
					&#9733;
				</div>
			</div>
		</div>
	</div>
	<div id = 'page'>Loading...</div>
	<script type = 'text/json' id = 'json'>
		{
			"current_user": <%= current_user.to_json %>,
			"users" : <%= User.all.to_json %>,
			"issues" : <%= Issue.all.to_json %>,
			"questions" : <%= Question.all.to_json %>,
			"answers" : <%= Answer.all.to_json %>,
			"sliders" : <%= Slider.all.to_json %>,
			"challenges" : <%= Challenge.all.to_json %>,
			"tasks" : <%= Task.all.to_json %>
		}
	</script>

	<%= content_for :javascript do -%>
		<script type = 'text/javascript'>
			$(function() {
				var div, data;
				div = $('<div></div>');
				div.html($('#json').text());
				data = JSON.parse(div.text());
		
				QuizPop.initialize(data);
			});
		</script>
	<% end %>
<% end %>